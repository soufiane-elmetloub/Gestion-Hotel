<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#fafafa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_color"
            android:elevation="4dp"
            app:navigationIcon="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            app:titleTextColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardGuest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:strokeWidth="2dp"
                app:strokeColor="#1F000000"
                app:cardBackgroundColor="#FFFFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/tvReservationId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reservation :"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/tvGuestName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Guest Name"
                        android:textStyle="bold"
                        android:textColor="#222222"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:ellipsize="none"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="10sp"
                        app:autoSizeMaxTextSize="16sp"
                        app:autoSizeStepGranularity="0.5sp"
                        android:includeFontPadding="false"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvCheckIn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Check-in : 2025-01-01"
                        android:textColor="#444444"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvCheckOut"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Check-out : 2025-01-03"
                        android:textColor="#444444"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvRoom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Room :"
                        android:textColor="#444444"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvGuests"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Guests :"
                        android:textColor="#444444"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Status :"
                        android:textColor="#444444"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvPayment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Payment :"
                        android:textColor="#444444"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvTotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total :"
                        android:textStyle="bold"
                        android:textColor="#1a1a1a"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Bottom Back button with rounded capsule style -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="24dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBack"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:backgroundTint="@color/primary_color"
                    app:cornerRadius="28dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
