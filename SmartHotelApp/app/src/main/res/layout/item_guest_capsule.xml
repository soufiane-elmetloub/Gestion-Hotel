<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="32dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr"
        android:orientation="vertical"
        android:padding="14dp"
        android:background="@drawable/guest_capsule_gradient">

        <!-- Reservation ID on top -->
        <TextView
            android:id="@+id/tvReservationId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reservation:1234"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:gravity="center_horizontal"
            android:textAlignment="center"/>

        <!-- Row: Avatar + (Full name + Room) column + optional actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">

            <!-- Avatar -->
            <FrameLayout
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/guest_avatar_bg">

                <TextView
                    android:id="@+id/tvAvatarInitials"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="A B"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"/>
            </FrameLayout>

            <!-- Column: Guest name + Room under it -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvGuestName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Guest Name"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"/>

                

                
            </LinearLayout>

            
        </LinearLayout>

        <!-- Room number moved inside the name column above -->

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
