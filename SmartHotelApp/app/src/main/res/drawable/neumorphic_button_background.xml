<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Background -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#E0E0E0"/>
                    <corners android:radius="15dp"/>
                </shape>
            </item>
            <!-- Inner Shadow -->
            <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="135"
                        android:startColor="#B8B8B8"
                        android:endColor="#FFFFFF"/>
                    <corners android:radius="15dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Normal State -->
    <item>
        <layer-list>
            <!-- Bottom Right Shadow -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#B8B8B8"/>
                    <corners android:radius="15dp"/>
                </shape>
            </item>
            <!-- Top Left Shadow -->
            <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF"/>
                    <corners android:radius="15dp"/>
                </shape>
            </item>
            <!-- Background -->
            <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#4E73DF"/>
                    <corners android:radius="15dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
